<img data-ng-if="attachment.media_type == 'image'" 
     data-ng-src="{{ getImageUrl(attachment) }}"
     data-ng-class="{attachmentHover: hover,
                     placeholderImage: attachment.placeholder_image_path !== null}" 
     alt="{{ data.record.title }}" 
     data-ng-cloak>

<img data-ng-if="attachment.media_type == 'video' && attachmentsPerPage > 1" 
     data-ng-src="{{ getImageUrl(attachment) }}"
     data-ng-class="{attachmentHover: hover,
                     placeholderImage: attachment.placeholder_image_path !== null}" 
     alt="{{ data.record.title }}" 
     data-ng-cloak>

<video data-ng-if="attachment.media_type == 'video' && attachmentsPerPage == 1"
       data-ng-class="{attachmentHover: hover}"
       controls
       class="loaded-video"
       data-ng-src="{{ attachment.transcoded_video_url | trusted }}"
       data-ng-cloak> 
  Sorry! Your browser does not recognize video tags.
</video>

<audio data-ng-if="attachment.media_type == 'audio'" 
       data-ng-attr-poster="{{ getImageUrl(attachment) }}"
       data-ng-class="{attachmentHover: hover}"
       controls
       class="loaded-audio"
       data-ng-cloak>
  <source data-ng-if="attachment.media_type == 'audio'"
          data-ng-src="{{ attachment.file_upload_url | trusted }}"
          data-ng-cloak>
  Sorry! Your browser does not recognize audio tags.
</audio>

