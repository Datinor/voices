<div id="flash-container">
  <div class="container">
    <div class="padding-sides">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= message %>
        </div>
      <% end %>
    </div>
  </div>
</div>
