<!DOCTYPE html>
<html>
<head>
  <title>RailsVoices</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <!-- Quick and dirty fonts -->
  <link href='https://fonts.googleapis.com/css?family=Lato:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Merriweather:400,700' rel='stylesheet' type='text/css'>

  <%= yield :head %>
</head>
<body>

  <!-- pagewrap for footer -->
  <div id="wrap">

    <!-- bootstrap3 navbar -->
    <div id="header">
      <div class="navbar navbar-default">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" 
          data-toggle="collapse" 
          data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <%= link_to "VOICES", root_path, :id => "bootstrap-brand", :class => "navbar-brand" %>
        </div>
        
        <!-- navbar links -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">  
            <li>
              <% if controller?("static_pages") && action?("about") %>
                <%= link_to "ABOUT", static_pages_about_path, :class => "active" %>
              <% else %>
                <%= link_to "ABOUT", static_pages_about_path %>
              <% end %>
            </li>

            <li>
              <% if controller?("records") && action?("new") %>
                <%= link_to "CONTRIBUTE", new_record_path, :class => "active" %>
              <% else %>
                <%= link_to "CONTRIBUTE", new_record_path %>
              <% end %>
            </li>

            <!-- Don't render an active class on the voices page -->
            <li>
              <%= link_to "VOICES", root_path, :id => "voices-brand" %>
            </li>

            <li>
              <% if controller?("static_pages") && action?("contact") %>
                <%= link_to "CONTACT", static_pages_contact_path, :class => "active" %>
              <% else %>
                <%= link_to "CONTACT", static_pages_contact_path %>
              <% end %>
            </li>

            <li>
              <% if session[:cas_user] %>
                <% if controller?("user") && action?("show") %>
                  <%= link_to session[:cas_user], user_show_path, :class => "active" %>
                <% else %>
                  <%= link_to session[:cas_user], user_show_path %>
                <% end %>
              <% else %>
                <% if controller?("user") && action?("show") %>
                  <% link_to "LOG IN", user_show_path, :class=> "active" %>
                <% else %>
                  <%= link_to "LOG IN", user_show_path %>
                <% end %>
              <% end %>
            </li>

          </ul>
        </div>
      </div>
    </div> <!-- /#header -->
 
    <% if controller_name != "static_pages" && action_name != "home" %>
      <% if controller_name != "records" && action_name != "show" %>
        <div class="container">
      <% else %>
      <div>
      <% end %>
    <%else%>
      <div>
    <% end %>

      <!-- page content -->
      <%= yield %>

    </div>
  </div> <!-- /#wrap -->
  <div id="footer">
    <div id="footer-left">
      <div id="footer-left-top-brand">Yale</div>
      <div id="footer-left-top-university">UNIVERSITY LIBRARY</div>
      <div id="footer-left-bottom">Digital Humanities Laboratory</div>
    </div>
    <div id="footer-right">
      <div id="footer-right-top">DH</div>
      <div id="footer-right-bottom">Lab</div>
    </div>
  </div>
</body>
</html>
